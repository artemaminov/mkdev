<p id="notice"><%= notice %></p>

<h1>Home</h1>

<div class="row">
  <div class="col-4">
    <div class="list-group" role="tablist">
      <a class="list-group-item list-group-item-action active d-flex justify-content-between align-items-center" id="list-posts-list" data-toggle="list" href="#list-post" role="tab" aria-controls="post">Posts<span class="badge badge-primary badge-pill"><%= @posts.count %></span></a>
      <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" id="list-stories-list" data-toggle="list" href="#list-story" role="tab" aria-controls="story">Stories<span class="badge badge-primary badge-pill"><%= @posts.count %></span></a>
      <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" id="list-images-list" data-toggle="list" href="#list-image" role="tab" aria-controls="image">Images<span class="badge badge-primary badge-pill"><%= @posts.count %></span></a>
    </div>
  </div>

  <div class="col-8">
    <div class="tab-content" id="nav-tabContent">
      <div class="tab-pane fade show active" id="list-post" role="tabpanel" aria-labelledby="list-posts-list">
        <%= link_to 'New Post', new_post_path %>
        <div class="list-group">
          <% @posts.each do |post| %>
            <a href="#" class="list-group-item list-group-item-action active">
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"><%= link_to post.title, post %></h5>
                <small>3 days ago</small>
              </div>
              <div>
                <%= link_to 'Edit', edit_post_path(post) %>
                <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            </a>
          <% end %>
        </div>
      </div>
      <div class="tab-pane fade" id="list-story" role="tabpanel" aria-labelledby="list-stories-list">
        <%= link_to 'New Story', new_story_path %>
        <div class="list-group">
          <% @stories.each_with_index do |story, i| %>
            <a href="#" class="list-group-item list-group-item-action active">
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"><%= link_to "Story #{i}", story %></h5>
                <small>3 days ago</small>
              </div>
              <%= link_to 'Edit', edit_story_path(story) %>
              <%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' } %>
            </a>
          <% end %>
        </div>
      </div>
      <div class="tab-pane fade" id="list-image" role="tabpanel" aria-labelledby="list-images-list">
        <%= link_to 'New Image', new_image_path %>
        <div class="list-group">
          <% @images.each do |image| %>
            <a href="#" class="list-group-item list-group-item-action active">
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"><%= link_to image.title, image %></h5>
                <small>3 days ago</small>
              </div>
              <%= link_to 'Edit', edit_image_path(image) %>
              <%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %>
            </a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
